{% extends 'partials/base.html.twig' %}

{% block content %}
	<header class="row page-header">
		<h1 class="page-title">{{ page.title}}</h1>
	</header>
  <section class="row">
    <article class="col-12">
      {{ page.content }}
    </article>
	</section>

  <section class="row listing cameras">

    <menu class="inventory-list row small">
      {% for group in page.header.inventory_list %}
        {% include 'widgets/inventory-loop.html.twig' with {'format':group.format,'type':group.type,'brand':group.sort} %}
      {% endfor %}
    </menu>

  </section>
{% endblock %}
